---
import Base from "../layouts/Base.astro";
import Subject from "../components/Subtitle.astro";
import Title from "../components/Title.astro";
import {IMG_GALLERY} from "../gallery";
import { Image } from "astro:assets";
import Content from "../components/Content.astro";
---
<Base title="Services">
    <Title title="Services"/>
    <Content>
    <ul class="grid sm:grid-cols-2 gap-4 px-4 pb-4">
      {IMG_GALLERY.map(({alt, image, full}) =>
        <li class="text-center rounded-lg">
          <Subject title={alt}/>
          <a href={`/images/${full}`} target="_blank">
            <Image src={image} alt={alt} class="border-2 border-green-700/60 rounded-lg shadow-xl"/>
          </a>
        </li>
      )}
    </ul>
    </Content>
</Base>